<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>
  <%= link_to("Connect Twitter acount", "auth/twitter", method: :post, class: "btn btn-primary") %>
</div>

<% @twitter_accounts.each do |tw| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag(tw.image, class: "rounded-circle") %>
      <%= link_to("@#{tw.username}", "https/twitter.com/#{tw.username}", target: :_blank) %>
    </div>
    <%= button_to("Disconnect", tw, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary") %>
  </div>
<% end %>
