<h1>Sign in</h1>

<%= form_with(url: :sign_in) do |f| %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control",
                             placeholder: "test@test.com" %>
  </div>
  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control",
                                    placeholder: "qwerty123" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>
