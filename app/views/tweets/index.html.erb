<div class="d-flex align-items-center justify-content-between">
  <h1>Tweets</h1>
  <% if Current.user.twitter_accounts.any? %>
    <%= button_to("Schedule a Tweet", :new_tweet, class: "btn btn-primary") %>
  <% else %>
    <%= button_to("Connect your Twitter Acount", "auth/twitter", method: :post, class: "btn btn-primary") %>
  <% end %>
</div>
